<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  <label>Name:</label>
  <br>
  <input type="text" name="figure[name]" id="figure_name" placeholder="new figure's name">
  <br>

<p>Select an existing title or create a new one below.</p>

  <h3>Existing Titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>
  <% end %>

  <h3>New Title</h3>
  <label>Title Name: </label>
  <br>
  <input type="text" name="title[name]" id="new_title" placeholder="new title's name">
  <br><br>

  <p>Select an existing landmark or create a new one below.</p>

  <h3>Existing Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><br>
  <% end %>

  <h3>New Landmark</h3>
  <label>Landmark Name: </label>
  <br>
  <input type="text" name="landmark[name]" id="new_landmark" placeholder="new landmark's name">
  <br><br>
  <label>Landmark Year: </label>
  <br>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed" placeholder="new landmark's year">
  <br><br>

  <input type="submit" value="Create New Figure">
</form>
<br>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>