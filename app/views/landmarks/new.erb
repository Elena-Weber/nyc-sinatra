<h2>Create New Landmark</h2>

<!-- add content here -->

<form action="/landmarks" method="POST">
  <label>Name:</label>
  <br>
  <input type="text" name="landmark[name]" id="landmark_name" placeholder="new landmark's name">
  <br>
<br>
  <label>Year Completed:</label>
  <br>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed" placeholder="new landmark's year_completed">
  <br>

  <p>Select an existing figure or create a new one below.</p>

  <h3>Existing Figures</h3>
  <% @figures.each do |figure| %>
    <input type="radio" name="landmark[figure_id]" id="<%= figure.id %>" value="<%= figure.id %>"><%= figure.name %><br>
  <% end %>
  <br>

  <h3>New Figure</h3>
  <label>Figure Name: </label>
  <br>
  <input type="text" name="figure[name]" id="figure_name" placeholder="new figure's name">
  <br><br>

  <input type="submit" value="Create New Landmark">
</form>
<br>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
