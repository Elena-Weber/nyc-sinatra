<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="landmark[name]">Edit the Landmark's Name:</label>
    <br>
    <input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name">
<br>
<label for="landmark[year_completed]">Edit the Landmark's Year:</label>
    <br>
    <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>" id="year_completed">

    <br>
    <p>Select an existing figure or create a new one below.</p>


    <h3>Existing Figures</h3>
    <% @figures.each do |figure| %>
        <input type="radio" name="landmark[figure_id]" id="<%= figure.id %>" value="<%= figure.id %>"<%='checked' if @landmark.figure == figure %>><%= figure.name %><br>
    <% end %>
    <br>

    <h3>New Figure</h3>
    <label>Figure Name: </label>
    <br>
    <input type="text" name="figure[name]" id="figure_name">
    <br><br>

    <input type="submit" value="Edit Landmark">
</form> 

